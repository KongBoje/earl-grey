;;    ;; Example:
;;    ;;   neighbours{{1, 7, 10, 3, 7}}
;;    ;;     ==> {{1, 7}, {7, 10}, {10, 3}, {3, 7}}

;;    {} -> {}
;;    {x} -> {}
;;    {x, y, *rest} ->
;;       {{x, y}} ++ _neighbours{{y} ++ rest}


partition{xs, predicate} =
   ;; Partition a list according to a predicate
   ;; Example:
   ;;   partition{{1, 2, 4, 5, 16}, {x} -> x mod 2}
   ;;     ==> {{1, 5}, {2, 4, 16}}

   t = {}
   f = {}
   xs each
      x when predicate{x} -> t.push{x}
      x -> f.push{x}
   {t, f}


